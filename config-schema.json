{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SupaBootstrap Configuration",
  "description": "Configuration schema for SupaBootstrap CLI",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "description": "Version of supabootstrap CLI that created/last updated this config"
    },
    "sourceDir": {
      "type": "string",
      "description": "Path to the Supabase directory relative to project root",
      "default": "./supabase"
    },
    "filePrefix": {
      "type": "string",
      "description": "Optional prefix added to all files installed by the CLI"
    },
    "installedFeatures": {
      "type": "object",
      "description": "Tracks installed features and their versions",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "version": {
            "type": "string"
          },
          "installedAt": {
            "type": "string",
            "format": "date-time"
          },
          "files": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": ["version", "installedAt", "files"]
      },
      "default": {}
    }
  },
  "required": ["version", "sourceDir", "installedFeatures"],
  "additionalProperties": false
}